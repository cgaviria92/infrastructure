# Configuración principal de WPA
upstream wpa_backend {
    server wpa:8000;
    keepalive 32;
}

# Configuración para Portainer
upstream portainer_backend {
    server portainer:9000;
}

# Configuración para Grafana
upstream grafana_backend {
    server grafana:3000;
}

# Servidor principal - WPA
server {
    listen 80;
    server_name localhost wpa.local *.wpa.local;
    
    # Redirección a HTTPS (opcional, descomenta si tienes SSL)
    # return 301 https://$server_name$request_uri;

    # Configuración para desarrollo sin SSL
    client_max_body_size 100M;
    
    # Archivos estáticos
    location /static/ {
        alias /var/www/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    location /media/ {
        alias /var/www/media/;
        expires 1M;
        add_header Cache-Control "public";
    }

    # Aplicación principal
    location / {
        proxy_pass http://wpa_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Rate limiting para login
        location ~ ^/(login|accounts/login) {
            limit_req zone=login burst=10 nodelay;
            proxy_pass http://wpa_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Rate limiting para API
        location ~ ^/api/ {
            limit_req zone=api burst=50 nodelay;
            proxy_pass http://wpa_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # Health check
    location /health {
        proxy_pass http://wpa_backend/health/;
        access_log off;
    }
}

# Servidor para Portainer (monitoreo)
server {
    listen 80;
    server_name portainer.wpa.local monitor.wpa.local;

    client_max_body_size 100M;

    location / {
        proxy_pass http://portainer_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support para Portainer
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

# Servidor para Grafana (dashboards)
server {
    listen 80;
    server_name grafana.wpa.local dashboards.wpa.local;

    client_max_body_size 100M;

    location / {
        proxy_pass http://grafana_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support para Grafana
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
